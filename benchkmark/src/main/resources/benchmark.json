{
  "name": "benchmark",
  "description": "No description",
  "sparkStreamingWindow": 2000,
  "checkpointPath": "checkpoint",
  "rawData": {
    "enabled": "false",
    "partitionFormat": "day",
    "path": "myTestParquetPath"
  },
  "input":
  {
    "name": "in-kafka",
    "type": "Kafka",
    "configuration": {
      "topics": [{"topic": "benchmark", "partition" : "1"}],
      "zookeeper.connect": [{"host": "devsparkta-b-01", "port": "2181"},
        {"host": "devsparkta-b-02", "port": "2181"},
        {"host": "devsparkta-b-03", "port": "2181"}],
      "kafkaParams.group.id": "KafkaCluster"
    }
  }
,
  "transformations": [
    {
      "name": "morphline-parser",
      "order": 0,
      "type": "Morphlines",
      "outputFields": [
        "orderId",
        "timestamp",
        "clientId",
        "latitude",
        "longitude",
        "paymentMethod",
        "creditCard",
        "shoppingCenter",
        "employee"
      ],
      "configuration": {
        "morphline": {
          "id": "morphline1",
          "importCommands": [
            "org.kitesdk.**"
          ],
          "commands": [
            {
              "readJson": {}
            },
            {
              "extractJsonPaths": {
                "paths": {
                  "orderId": "/order_id",
                  "timestamp": "/timestamp",
                  "clientId": "/client_id",
                  "latitude": "/latitude",
                  "longitude": "/longitude",
                  "paymentMethod": "/payment_method",
                  "creditCard": "/credit_card",
                  "shoppingCenter": "/shopping_center",
                  "employee": "/employee"
                }
              }
            },
            {
              "removeFields": {
                "blacklist": [
                  "literal:_attachment_body"
                ]
              }
            }
          ]
        }
      }
    },
    {
      "name": "timestamp",
      "order": 1,
      "type": "DateTime",
      "outputFields": [
        "timestamp"
      ],
      "configuration": {
        "inputFormat": "autoGenerated"
      }
    }
  ],
  "cubes": [
    {
      "name": "testCube",
      "checkpointConfig": {
        "timeDimension": "minute",
        "granularity": "minute",
        "interval": 30000,
        "timeAvailability": 60000
      },
      "dimensions": [
        {
          "name": "payment_method",
          "field": "paymentMethod"
        },
        {
          "name": "shopping_center",
          "field": "shoppingCenter"
        }
      ],
      "operators": [
        {
          "name": "countoperator",
          "type": "Count",
          "configuration": {}
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "out-mongo",
      "type": "MongoDb",
      "configuration": {
        "hosts": [{"host": "devsparkta-b-01" , "port": "27017" },
          {"host": "devsparkta-b-02" , "port": "27017" },
          {"host": "devsparkta-b-03" , "port": "27017" }],
        "dbName": "sparkta"
      }
    }
  ]
}